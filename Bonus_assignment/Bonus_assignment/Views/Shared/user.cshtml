@{ 
    var name =  (string)Session["username"];
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>  My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color: #CBD839;">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm " style=" background-color: #581723;">
        <div class="container">
            @Html.ActionLink(name, "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style= "color: white;" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">

                    <li>@Html.ActionLink("All Products", "Index", "items", new { area = "" }, new { @class = "nav-link", @style = "color: white;" })</li>
                    <li>@Html.ActionLink("Cart", "Index", "orders", new { area = "" }, new { @class = "nav-link", @style = "color: white;" })</li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
